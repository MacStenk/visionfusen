---
import Base from '../layouts/Base.astro';
import Login from '../components/Login';

export const prerender = false;
---

<Base title="Anmelden – Visionfusen">
  <div class="page-login">
    <nav class="nav-minimal">
      <a href="/" class="logo">
        <span class="logo-mark">◈</span>
        <span>Visionfusen</span>
      </a>
    </nav>

    <main class="login-container">
      <Login client:load />
    </main>
  </div>
</Base>

<style>
  .page-login {
    min-height: 100vh;
    position: relative;
    z-index: 1;
  }

  .nav-minimal {
    padding: 1.5rem 2rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.25rem;
    text-decoration: none;
    color: var(--white);
  }

  .logo-mark {
    color: var(--orange);
    font-size: 1.5rem;
  }

  .login-container {
    max-width: 480px;
    margin: 0 auto;
    padding: 2rem;
  }

  /* Wide variant for seed input */
  :global(.login-card-wide) {
    max-width: 600px !important;
  }

  /* Login Card */
  :global(.login-card) {
    background: var(--gray-light);
    border: 1px solid rgba(255,255,255,0.1);
    padding: 2.5rem 2rem;
  }

  :global(.login-card h1) {
    font-family: 'Instrument Serif', serif;
    font-size: 2rem;
    color: var(--white);
    margin-bottom: 0.75rem;
    text-align: center;
  }

  :global(.login-intro) {
    color: var(--gray);
    text-align: center;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  /* Method Selection */
  :global(.login-methods) {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  :global(.method-btn) {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 0.25rem;
    padding: 1.25rem 1.5rem;
    background: var(--black);
    border: 1px solid rgba(255,255,255,0.1);
    color: var(--white);
    cursor: pointer;
    transition: all 0.2s;
    text-align: left;
    position: relative;
  }

  :global(.method-btn:hover:not(.disabled)) {
    border-color: var(--orange);
  }

  :global(.method-btn.disabled) {
    opacity: 0.6;
    cursor: default;
  }

  :global(.method-icon) {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  :global(.method-name) {
    font-family: 'Space Mono', monospace;
    font-size: 1rem;
    font-weight: 700;
  }

  :global(.method-desc) {
    font-size: 0.85rem;
    color: var(--gray);
  }

  :global(.method-badge) {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: var(--orange);
    color: var(--black);
    padding: 0.2rem 0.5rem;
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 700;
  }

  :global(.method-link) {
    color: var(--orange);
    font-size: 0.85rem;
    margin-top: 0.5rem;
  }

  /* Back Button */
  :global(.back-btn) {
    background: none;
    border: none;
    color: var(--gray);
    font-size: 0.9rem;
    cursor: pointer;
    margin-bottom: 1.5rem;
    padding: 0;
  }

  :global(.back-btn:hover) {
    color: var(--orange);
  }

  /* Input Group */
  :global(.input-group) {
    margin-bottom: 1.5rem;
  }

  :global(.input-group label) {
    display: block;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--gray);
    margin-bottom: 0.5rem;
  }

  :global(.input-group input) {
    width: 100%;
    padding: 0.875rem 1rem;
    background: var(--black);
    border: 1px solid rgba(255,255,255,0.2);
    color: var(--white);
    font-family: 'Space Mono', monospace;
    font-size: 1rem;
  }

  :global(.input-group input:focus) {
    outline: none;
    border-color: var(--orange);
  }

  /* Seed Input Grid */
  :global(.seed-input-grid) {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.75rem;
    margin-bottom: 2rem;
  }

  :global(.seed-input-item) {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--black);
    padding: 0.5rem;
    border: 1px solid rgba(255,255,255,0.1);
  }

  :global(.seed-input-number) {
    font-size: 0.75rem;
    color: var(--gray);
    width: 20px;
    text-align: right;
  }

  :global(.seed-input-item input) {
    flex: 1;
    background: transparent;
    border: none;
    color: var(--white);
    font-family: 'Space Mono', monospace;
    font-size: 0.9rem;
    padding: 0.5rem 0;
    width: 100%;
  }

  :global(.seed-input-item input:focus) {
    outline: none;
  }

  :global(.seed-input-item input::placeholder) {
    color: var(--gray-dark);
  }

  /* Buttons */
  :global(.btn-primary) {
    width: 100%;
    padding: 1rem;
    background: var(--orange);
    color: var(--black);
    border: none;
    font-family: 'Space Mono', monospace;
    font-size: 1rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.2s;
  }

  :global(.btn-primary:hover:not(:disabled)) {
    background: var(--orange-dark);
  }

  :global(.btn-primary:disabled) {
    opacity: 0.5;
    cursor: not-allowed;
  }

  :global(.btn-secondary) {
    padding: 0.75rem 1.5rem;
    background: transparent;
    border: 1px solid var(--orange);
    color: var(--orange);
    font-family: 'Space Mono', monospace;
    font-size: 0.9rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  :global(.btn-secondary:hover) {
    background: rgba(255, 107, 53, 0.1);
  }

  /* Error Message */
  :global(.error-message) {
    background: rgba(255, 107, 107, 0.1);
    border: 1px solid rgba(255, 107, 107, 0.3);
    color: #ff6b6b;
    padding: 0.75rem 1rem;
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  /* States */
  :global(.extension-state),
  :global(.success-state) {
    text-align: center;
    padding: 2rem 0;
  }

  :global(.loading-icon) {
    font-size: 3rem;
    color: var(--orange);
    display: block;
    margin-bottom: 1.5rem;
    animation: pulse 1.5s ease-in-out infinite;
  }

  :global(.success-icon) {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background: var(--orange);
    color: var(--black);
    font-size: 2rem;
    font-weight: 700;
    border-radius: 50%;
    margin-bottom: 1.5rem;
  }

  :global(.error-icon) {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background: #ff6b6b;
    color: var(--black);
    font-size: 2rem;
    font-weight: 700;
    border-radius: 50%;
    margin-bottom: 1.5rem;
  }

  :global(.extension-state h2),
  :global(.success-state h2) {
    font-family: 'Instrument Serif', serif;
    font-size: 1.5rem;
    color: var(--white);
    margin-bottom: 0.5rem;
  }

  :global(.extension-state p),
  :global(.success-state p) {
    color: var(--gray);
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  /* Footer */
  :global(.login-footer) {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255,255,255,0.1);
    text-align: center;
  }

  :global(.login-footer p) {
    color: var(--gray);
    font-size: 0.9rem;
  }

  :global(.login-footer a) {
    color: var(--orange);
    text-decoration: none;
  }

  :global(.login-footer a:hover) {
    text-decoration: underline;
  }

  @media (max-width: 600px) {
    :global(.login-card) {
      padding: 2rem 1.5rem;
    }

    :global(.seed-input-grid) {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
