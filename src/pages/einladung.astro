---
import Base from '../layouts/Base.astro';
import InvitePage from '../components/InvitePage';
---

<Base title="Du wurdest eingeladen – Visionfusen">
  <div class="page-invite">
    <nav class="nav-minimal">
      <a href="/" class="logo">
        <span class="logo-mark">◈</span>
        <span>Visionfusen</span>
      </a>
    </nav>

    <main class="invite-container">
      <InvitePage client:load />
    </main>
  </div>
</Base>

<style>
  .page-invite {
    min-height: 100vh;
    position: relative;
    z-index: 1;
  }

  .nav-minimal {
    padding: 1.5rem 2rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.25rem;
    text-decoration: none;
    color: var(--white);
  }

  .logo-mark {
    color: var(--orange);
    font-size: 1.5rem;
  }

  .invite-container {
    max-width: 520px;
    margin: 0 auto;
    padding: 2rem;
  }

  :global(.invite-card) {
    background: var(--gray-light);
    border: 1px solid rgba(255,255,255,0.1);
    padding: 3rem 2.5rem;
    text-align: center;
  }

  :global(.invite-icon) {
    font-size: 4rem;
    color: var(--orange);
    margin-bottom: 1.5rem;
    animation: pulse 3s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.8; transform: scale(1.05); }
  }

  :global(.invite-card h1) {
    font-family: 'Instrument Serif', serif;
    font-size: 2rem;
    color: var(--white);
    margin-bottom: 1rem;
  }

  :global(.invite-from) {
    font-size: 1.1rem;
    color: var(--gray);
    margin-bottom: 2rem;
  }

  :global(.invite-from strong) {
    color: var(--orange);
  }

  :global(.invite-quote) {
    border-left: 3px solid var(--orange);
    padding-left: 1.5rem;
    margin: 2rem 0;
    text-align: left;
  }

  :global(.invite-quote p) {
    font-family: 'Instrument Serif', serif;
    font-style: italic;
    font-size: 1.25rem;
    color: var(--white);
  }

  :global(.invite-text) {
    color: var(--gray);
    line-height: 1.8;
    margin-bottom: 2rem;
    text-align: left;
  }

  :global(.invite-benefits) {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 2rem;
    text-align: left;
  }

  :global(.benefit) {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem;
    background: var(--black);
    border: 1px solid rgba(255,255,255,0.05);
  }

  :global(.benefit-icon) {
    font-size: 1.25rem;
  }

  :global(.benefit span:last-child) {
    color: var(--gray);
    font-size: 0.95rem;
  }

  :global(.invite-card .btn-primary) {
    display: block;
    width: 100%;
    padding: 1rem;
    background: var(--orange);
    color: var(--black);
    border: none;
    font-family: 'Space Mono', monospace;
    font-size: 1rem;
    font-weight: 700;
    text-decoration: none;
    text-align: center;
    cursor: pointer;
    transition: all 0.2s;
    margin-bottom: 1rem;
  }

  :global(.invite-card .btn-primary:hover) {
    background: var(--orange-dark);
  }

  :global(.invite-note) {
    font-size: 0.8rem;
    color: var(--gray-dark);
  }

  @media (max-width: 600px) {
    :global(.invite-card) {
      padding: 2rem 1.5rem;
    }
  }
</style>
