---
import Base from '../layouts/Base.astro';
import Registration from '../components/Registration';

export const prerender = false;
---

<Base title="Registrieren – Visionfusen">
  <div class="page-register">
    <nav class="nav-minimal">
      <a href="/" class="logo">
        <span class="logo-mark">◈</span>
        <span>Visionfusen</span>
      </a>
    </nav>

    <main class="register-container">
      <Registration client:load />
    </main>
  </div>
</Base>

<style>
  .page-register {
    min-height: 100vh;
    position: relative;
    z-index: 1;
  }

  .nav-minimal {
    padding: 1.5rem 2rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.25rem;
    text-decoration: none;
    color: var(--white);
  }

  .logo-mark {
    color: var(--orange);
    font-size: 1.5rem;
  }

  .register-container {
    max-width: 520px;
    margin: 0 auto;
    padding: 2rem;
  }

  /* Registration Card */
  :global(.registration) {
    background: var(--gray-light);
    border: 1px solid rgba(255,255,255,0.1);
    padding: 2.5rem 2rem;
  }

  :global(.registration h1) {
    font-family: 'Instrument Serif', serif;
    font-size: 2rem;
    color: var(--white);
    margin-bottom: 0.75rem;
    text-align: center;
  }

  :global(.invited-by) {
    text-align: center;
    color: var(--gray);
    margin-bottom: 2rem;
  }

  :global(.invited-by strong) {
    color: var(--orange);
  }

  /* Input Group */
  :global(.input-group) {
    margin-bottom: 1.5rem;
  }

  :global(.input-group label) {
    display: block;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--gray);
    margin-bottom: 0.5rem;
  }

  :global(.input-group input) {
    width: 100%;
    padding: 0.875rem 1rem;
    background: var(--black);
    border: 1px solid rgba(255,255,255,0.2);
    color: var(--white);
    font-family: 'Space Mono', monospace;
    font-size: 1rem;
  }

  :global(.input-group input:focus) {
    outline: none;
    border-color: var(--orange);
  }

  :global(.input-with-suffix) {
    display: flex;
    align-items: stretch;
  }

  :global(.input-with-suffix input) {
    flex: 1;
    border-right: none;
  }

  :global(.input-suffix) {
    display: flex;
    align-items: center;
    padding: 0 1rem;
    background: var(--gray-dark);
    border: 1px solid rgba(255,255,255,0.2);
    border-left: none;
    color: var(--gray);
    font-family: 'Space Mono', monospace;
    font-size: 0.85rem;
    white-space: nowrap;
  }

  /* Buttons */
  :global(.btn-primary) {
    width: 100%;
    padding: 1rem;
    background: var(--orange);
    color: var(--black);
    border: none;
    font-family: 'Space Mono', monospace;
    font-size: 1rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.2s;
  }

  :global(.btn-primary:hover:not(:disabled)) {
    background: var(--orange-dark);
  }

  :global(.btn-primary:disabled) {
    opacity: 0.5;
    cursor: not-allowed;
  }

  :global(.btn-secondary) {
    width: 100%;
    padding: 1rem;
    background: transparent;
    border: 1px solid var(--orange);
    color: var(--orange);
    font-family: 'Space Mono', monospace;
    font-size: 1rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.2s;
  }

  :global(.btn-secondary:hover) {
    background: rgba(255, 107, 53, 0.1);
  }

  /* Error Message */
  :global(.error-message) {
    background: rgba(255, 107, 107, 0.1);
    border: 1px solid rgba(255, 107, 107, 0.3);
    color: #ff6b6b;
    padding: 0.75rem 1rem;
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  /* Warning Box */
  :global(.warning-box) {
    text-align: center;
  }

  :global(.warning-icon) {
    font-size: 4rem;
    margin-bottom: 1rem;
  }

  :global(.warning-box h1) {
    color: #ff6b6b !important;
    margin-bottom: 1.5rem;
  }

  :global(.warning-lead) {
    font-size: 1.2rem;
    color: var(--white);
    margin-bottom: 2rem;
  }

  :global(.warning-content) {
    background: var(--black);
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    border-left: 3px solid var(--orange);
  }

  :global(.warning-content p) {
    color: var(--white);
    line-height: 1.8;
    margin: 0;
  }

  :global(.warning-content p + p) {
    margin-top: 1rem;
  }

  :global(.warning-list) {
    text-align: left;
    background: rgba(255, 107, 107, 0.1);
    border: 1px solid rgba(255, 107, 107, 0.3);
    padding: 1.5rem;
    margin-bottom: 1.5rem;
  }

  :global(.warning-list p) {
    color: #ff6b6b;
    font-weight: 700;
    margin-bottom: 0.75rem;
  }

  :global(.warning-list ul) {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  :global(.warning-list li) {
    color: var(--white);
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
  }

  :global(.warning-list li::before) {
    content: '✕';
    position: absolute;
    left: 0;
    color: #ff6b6b;
  }

  :global(.warning-physics) {
    color: var(--gray);
    font-size: 0.95rem;
    margin-bottom: 2rem;
    line-height: 1.7;
  }

  /* Seed Box */
  :global(.seed-box) {
    text-align: center;
  }

  :global(.seed-instruction) {
    color: var(--gray);
    margin-bottom: 2rem;
    line-height: 1.7;
  }

  :global(.seed-grid) {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.75rem;
    background: var(--black);
    padding: 1.5rem;
    margin-bottom: 2rem;
    border: 2px solid var(--orange);
  }

  :global(.seed-word) {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem;
    background: var(--gray-light);
  }

  :global(.seed-number) {
    font-size: 0.75rem;
    color: var(--gray);
    min-width: 20px;
  }

  :global(.seed-text) {
    font-family: 'Space Mono', monospace;
    color: var(--white);
    font-size: 0.95rem;
  }

  :global(.btn-download) {
    margin-bottom: 0.5rem;
  }

  :global(.download-hint) {
    font-size: 0.8rem;
    color: var(--gray-dark);
    margin-bottom: 2rem;
  }

  /* Checkboxes */
  :global(.seed-checkboxes) {
    text-align: left;
    margin-bottom: 2rem;
  }

  :global(.checkbox-label) {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 1rem;
    background: var(--black);
    margin-bottom: 0.5rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  :global(.checkbox-label:hover) {
    background: rgba(255, 255, 255, 0.05);
  }

  :global(.checkbox-label input) {
    width: 20px;
    height: 20px;
    margin-top: 2px;
    accent-color: var(--orange);
  }

  :global(.checkbox-label span) {
    color: var(--white);
    line-height: 1.5;
  }

  /* Complete Box */
  :global(.complete-box) {
    text-align: center;
    padding: 2rem 0;
  }

  :global(.complete-icon) {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    background: var(--orange);
    color: var(--black);
    font-size: 3rem;
    font-weight: 700;
    border-radius: 50%;
    margin-bottom: 1.5rem;
  }

  :global(.complete-box p) {
    color: var(--gray);
    line-height: 1.7;
  }

  @media (max-width: 600px) {
    :global(.registration) {
      padding: 2rem 1.5rem;
    }

    :global(.seed-grid) {
      grid-template-columns: repeat(2, 1fr);
    }

    :global(.input-with-suffix) {
      flex-direction: column;
    }

    :global(.input-with-suffix input) {
      border-right: 1px solid rgba(255,255,255,0.2);
      border-bottom: none;
    }

    :global(.input-suffix) {
      border-left: 1px solid rgba(255,255,255,0.2);
      border-top: none;
      justify-content: center;
      padding: 0.75rem;
    }
  }
</style>
