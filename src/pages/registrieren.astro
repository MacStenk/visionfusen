---
import Base from '../layouts/Base.astro';
import Registration from '../components/Registration';
---

<Base title="Registrieren – Visionfusen">
  <div class="page-registration">
    <nav class="nav-minimal">
      <a href="/" class="logo">
        <span class="logo-mark">◈</span>
        <span>Visionfusen</span>
      </a>
    </nav>

    <main class="registration-container">
      <Registration client:load />
    </main>
  </div>
</Base>

<style>
  .page-registration {
    min-height: 100vh;
    position: relative;
    z-index: 1;
  }

  .nav-minimal {
    padding: 1.5rem 2rem;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.25rem;
    text-decoration: none;
    color: var(--white);
  }

  .logo-mark {
    color: var(--orange);
    font-size: 1.5rem;
  }

  .registration-container {
    max-width: 480px;
    margin: 0 auto;
    padding: 2rem;
  }

  /* Registration Form Styles */
  :global(.registration) {
    background: var(--gray-light);
    border: 1px solid rgba(255,255,255,0.1);
    padding: 2.5rem;
    border-radius: 4px;
  }

  :global(.progress-steps) {
    display: flex;
    justify-content: space-between;
    margin-bottom: 2.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(255,255,255,0.1);
  }

  :global(.progress-step) {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    opacity: 0.4;
    transition: opacity 0.3s;
  }

  :global(.progress-step.active),
  :global(.progress-step.completed) {
    opacity: 1;
  }

  :global(.step-number) {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    border: 2px solid var(--gray);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.85rem;
    transition: all 0.3s;
  }

  :global(.progress-step.active .step-number) {
    border-color: var(--orange);
    color: var(--orange);
  }

  :global(.progress-step.completed .step-number) {
    border-color: var(--orange);
    background: var(--orange);
    color: var(--black);
  }

  :global(.step-label) {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  :global(.registration h2) {
    font-family: 'Instrument Serif', serif;
    font-size: 1.75rem;
    margin-bottom: 0.75rem;
    color: var(--white);
  }

  :global(.form-intro) {
    color: var(--gray);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  :global(.input-group) {
    margin-bottom: 1.5rem;
  }

  :global(.input-group label) {
    display: block;
    font-size: 0.8rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--gray);
    margin-bottom: 0.5rem;
  }

  :global(.input-group input) {
    width: 100%;
    padding: 0.875rem 1rem;
    background: var(--black);
    border: 1px solid rgba(255,255,255,0.2);
    color: var(--white);
    font-family: 'Space Mono', monospace;
    font-size: 1rem;
    transition: border-color 0.2s;
  }

  :global(.input-group input:focus) {
    outline: none;
    border-color: var(--orange);
  }

  :global(.input-with-suffix) {
    display: flex;
  }

  :global(.input-with-suffix input) {
    flex: 1;
    border-right: none;
  }

  :global(.input-suffix) {
    padding: 0.875rem 1rem;
    background: rgba(255,255,255,0.05);
    border: 1px solid rgba(255,255,255,0.2);
    border-left: none;
    color: var(--gray);
    font-family: 'Space Mono', monospace;
    font-size: 0.9rem;
    white-space: nowrap;
  }

  :global(.input-hint) {
    font-size: 0.75rem;
    color: var(--gray-dark);
    margin-top: 0.5rem;
  }

  :global(.error) {
    color: #ff6b6b;
    background: rgba(255, 107, 107, 0.1);
    padding: 0.75rem 1rem;
    margin-bottom: 1rem;
    font-size: 0.9rem;
  }

  :global(.btn-primary) {
    width: 100%;
    padding: 1rem;
    background: var(--orange);
    color: var(--black);
    border: none;
    font-family: 'Space Mono', monospace;
    font-size: 1rem;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
    display: block;
    text-align: center;
  }

  :global(.btn-primary:hover) {
    background: var(--orange-dark);
  }

  :global(.btn-primary:disabled) {
    opacity: 0.5;
    cursor: not-allowed;
  }

  /* Keys Display */
  :global(.key-box) {
    background: var(--black);
    padding: 1.25rem;
    margin-bottom: 1rem;
    border: 1px solid rgba(255,255,255,0.1);
  }

  :global(.key-box.private) {
    border-color: rgba(255, 107, 53, 0.3);
    background: rgba(255, 107, 53, 0.05);
  }

  :global(.key-header) {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
  }

  :global(.key-label) {
    font-weight: 700;
    font-size: 0.85rem;
  }

  :global(.key-info) {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--gray);
  }

  :global(.key-box.private .key-info) {
    color: var(--orange);
  }

  :global(.key-value) {
    display: block;
    word-break: break-all;
    font-size: 0.8rem;
    color: var(--gray);
    margin-bottom: 0.75rem;
    line-height: 1.5;
  }

  :global(.btn-copy) {
    padding: 0.4rem 0.75rem;
    background: transparent;
    border: 1px solid rgba(255,255,255,0.2);
    color: var(--gray);
    font-family: 'Space Mono', monospace;
    font-size: 0.75rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  :global(.btn-copy:hover) {
    border-color: var(--orange);
    color: var(--orange);
  }

  :global(.warning-box) {
    background: rgba(255, 193, 7, 0.1);
    border: 1px solid rgba(255, 193, 7, 0.3);
    padding: 1rem;
    margin: 1.5rem 0;
    font-size: 0.9rem;
    color: #ffc107;
  }

  /* Backup Step */
  :global(.btn-download) {
    width: 100%;
    padding: 1.25rem;
    background: var(--black);
    border: 2px dashed var(--orange);
    color: var(--orange);
    font-family: 'Space Mono', monospace;
    font-size: 1rem;
    cursor: pointer;
    margin-bottom: 1.5rem;
    transition: all 0.2s;
  }

  :global(.btn-download:hover) {
    background: rgba(255, 107, 53, 0.1);
  }

  :global(.checkbox-group) {
    margin-bottom: 1.5rem;
  }

  :global(.checkbox-label) {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    cursor: pointer;
  }

  :global(.checkbox-label input) {
    width: 20px;
    height: 20px;
    accent-color: var(--orange);
  }

  :global(.checkbox-label span) {
    font-size: 0.95rem;
    color: var(--gray);
  }

  /* Done Step */
  :global(.done-step) {
    text-align: center;
  }

  :global(.success-icon) {
    font-size: 4rem;
    color: var(--orange);
    margin-bottom: 1rem;
    animation: pulse 2s infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.8; transform: scale(1.05); }
  }

  :global(.done-step p) {
    color: var(--gray);
    margin-bottom: 1rem;
  }

  :global(.done-step .btn-primary) {
    margin-top: 1.5rem;
  }
</style>
