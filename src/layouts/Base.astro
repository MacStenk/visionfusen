---
import '../styles/global.css';

interface Props {
  // Meta
  title: string;
  description?: string;
  image?: string;
  url?: string;
  locale?: string;
  
  // Schema.org
  type?: 'WebSite' | 'WebPage' | 'Article' | 'Organization';
  datePublished?: string;
  dateModified?: string;
  author?: string;
  
  // LLM Optimization
  keywords?: string[];
  topic?: string;
  audience?: string;
}

const { 
  title,
  description = "Dekonditionierung. Für Mensch und Maschine. Wir wurden konditioniert, abhängig zu sein – technisch und gesellschaftlich. Hier beginnt der Reset.",
  image = "/og-image.png",
  url = "https://visionfusen.org",
  locale = "de_DE",
  type = "WebSite",
  datePublished = "2024-12-09",
  dateModified = new Date().toISOString().split('T')[0],
  author = "Steven Noack",
  keywords = ["Dekonditionierung", "Digitale Souveränität", "Self-Hosting", "Fediverse", "Open Protocols"],
  topic = "Digitale Souveränität und Dekonditionierung",
  audience = "Menschen, die ihre digitale Unabhängigkeit zurückgewinnen wollen"
} = Astro.props;

// Schema.org JSON-LD
